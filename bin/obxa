#!/usr/bin/env python3
# This file is place in the Public Domain.
# pylint: disable=C


"administrator"


import os
import sys


sys.path.insert(0, os.getcwd())


from obx.main    import Client, Commands, Config, Event
from obx.main    import scanner, command, parse, wrap
from obx.main    import keys
from obx.persist import NAME
from obx.runtime import Errors


import obx


"defines"


cfg = Config()


TXT = """[Unit]
Description=%s
After=network-online.target

[Service]
Type=simple
User=%s
Group=%s
ExecStart=/home/%s/.local/bin/%ss

[Install]
WantedBy=multi-user.target"""


class CLI(Client):

    def raw(self, txt):
        print(txt)


"utility"


def errors():
    for error in Errors.errors:
        for line in error:
            print(line)


def wrapped():
    wrap(main)
    if "v" in cfg.opts:
        errors()


"commands"


def cmd(event):
    event.reply(",".join(sorted(keys(Commands.cmds))))


def srv(event):
    import getpass
    name  = getpass.getuser()
    event.reply(TXT % (NAME.upper(), name, name, name, NAME))


def main():
    Commands.add(cmd)
    Commands.add(srv)
    parse(cfg, " ".join(sys.argv[1:]))
    evt = Event()
    evt.txt = cfg.txt
    csl = CLI()
    command(csl, evt)
    evt.wait()


if __name__ == "__main__":
    wrapped()
